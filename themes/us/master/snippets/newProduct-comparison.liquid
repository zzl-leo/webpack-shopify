<style>
    .newproduct-comparison-title {
        font-size: 3.020833vw;
        height: 3.020833vw;
        line-height: 3.020833vw;
        margin: 6.25vw 0 5.208333vw;
        color: #000;
    }

    .newproduct-comparison-item {
        margin-right: 0.625vw;
    }

    .newproduct-comparison-item:last-child {
        margin-right: 0;
    }

    .newproduct-comparison-img {
        width: 28.958333vw;
        height: 10vw;
        display: block;
    }

    .newproduct-comparison-pname {
        color: #000;
        font-size: 1.25vw;
        height: 1.25vw;
        line-height: 1.25vw;
        margin: 0.989583vw 0 3.4375vw;
    }

    .newproduct-comparison-ptime {
        color: #FF5000;
        font-size: 2.1875vw;
        height: 2.1875vw;
        line-height: 2.1875vw;
        margin-bottom: 0.5vw;
    }

    .newproduct-comparison-unit {
        color: #FF5000;
        font-size: 1.25vw;
        height: 1.25vw;
        line-height: 1.25vw;
    }

    .newproduct-comparison-container {
        padding-bottom: 9.479167vw;
    }

    @media screen and (max-width: 750px) {
        .newproduct-comparison-title {
            font-size: 5.86667vw;
            height: 5.86667vw;
            line-height: 5.86667vw;
            margin: 11.2vw 0 9.33333vw;
            color: #333;
        }

        .newproduct-comparison-products {
            flex-direction: column;
            padding: 0 3.2vw;
        }

        .newproduct-comparison-item {
            margin-right: 0;
            display: flex;
            align-items: center;
        }

        .newproduct-comparison-item .item-product {
            width: 69.33333vw;
        }

        .newproduct-comparison-item .params-product {
            flex: 1;
        }

        .newproduct-comparison-img {
            width: 69.33333vw;
            height: 24vw;
        }

        .newproduct-comparison-pname {
            color: #333;
            font-size: 3.46667vw;
            height: 3.46667vw;
            line-height: 3.46667vw;
            margin: 1.33333vw 0 6.66667vw;
        }

        .newproduct-comparison-ptime {
            font-size: 7.2vw;
            height: 7.2vw;
            line-height: 7.2vw;
            margin-bottom: 1.33333vw;
        }

        .newproduct-comparison-unit {
            font-size: 3.2vw;
            height: 3.2vw;
            line-height: 3.2vw;
        }

        .newproduct-comparison-container {
            padding-bottom: 13.33333vw;
        }

        .newproduct-comparison-subtitle {
            display: flex!important;
            border-bottom: solid 1px #DDDDDD;
            padding-bottom: 1.86667vw;
        }
        .p-l-title {
            width: 69.33333vw;
            font-size: 3.2vw;
        }
        .p-r-title {
            flex: 1;
            font-size: 3.2vw;
        }
    }
</style>
<div>
  <div class="newproduct-comparison-container">
    <div class="newproduct-comparison-title font-bold text-center">{{ section_title | escape }}</div>

    <div class="newproduct-comparison-products flex justify-center text-center">
      <div class="mobile-block newproduct-comparison-subtitle">
        <div class="p-l-title text-center font-bold">Current Bundles</div>
        <div class="p-r-title text-center font-bold">Rechagring Time (0-100%)</div>
      </div>
      {% for block in blocks %}
        <div class="newproduct-comparison-item">
          <div class="item-product">
            <img
              class="object-cover object-center newproduct-comparison-img"
              src="{{ block.settings.product_img | img_url: '556x' }}"
              loading="lazy"
              alt="{{ block.settings.product_img.alt | escape }}"
            >

            <div class="newproduct-comparison-pname font-bold">{{ block.settings.p_name | escape }}</div>
          </div>
          
          <div class="params-product">
            <div class="newproduct-comparison-ptime font-bold">{{ block.settings.p_time | escape }}</div>
            <div class="newproduct-comparison-unit font-bold">Hours</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>